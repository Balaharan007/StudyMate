# üîê Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# HackRx Authentication
BEARER_TOKEN=your_bearer_token_here

# AI Models
GEMINI_API_KEY=your_gemini_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_environment_here
PINECONE_INDEX_NAME=your_index_name_here

# Database (Optional - using in-memory storage by default)
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_HOST=your_db_host
DB_PORT=your_db_port
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Application Settings
DEBUG=False
GEMINI_MODEL=your_model_name_here
LOG_LEVEL=INFO

# üìù Instructions:
# 1. Rename this file from .env.example to .env
# 2. Replace all "your_*_here" values with your actual API keys
# 3. Never commit .env file to git (it's in .gitignore)
# 4. For Netlify deployment, add these as environment variables in Netlify dashboard
